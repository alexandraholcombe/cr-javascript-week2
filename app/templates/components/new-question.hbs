{{#bs-button type="primary" icon="glyphicon glyphicon-pencil" onClick=(action 'questionFormShow')}}Ask a Question{{/bs-button}}
{{#if addNewQuestion}}
{{#bs-modal as |modal|}}
{{#modal.header}}
<h3 class="modal-title">Ask a question</h3><i class="glyphicon glyphicon-pencil"></i>
{{/modal.header}}
{{#modal.body}}
<form>
  <div class="form-group">
    <label for="question">Title</label>
    {{input class="form-control" val=question id="question" placeholder="Why do dogs bark at the UPS truck?" required=true}}
  </div>
  <div class="form-group">
    <label for="author">Your Name</label>
    {{input class="form-control" val=author id="author" placeholder="Dog Person" required=true}}
  </div>
  <div class="form-group">
    <label for="content">Details</label>
    {{input class="form-control" val=content id="content" placeholder="Explain your question."}}
  </div>
  <div class="form-group">
    <label for="notes">Notes</label>
    {{input class="form-control" val=notes id="notes" placeholder="Add additional notes here"}}
  </div>

  {{#bs-button onClick=(action 'saveQuestion') type="primary"}} Ask a Question{{/bs-button}}
  <!-- <button type="submit" class="primary" name="button">Ask a Question</button> -->
</form>
{{/modal.body}}
{{/bs-modal}}
{{/if}}
