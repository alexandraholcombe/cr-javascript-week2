<h3>Answer Question</h3>
<form>
  <div class="form-group">
    <label for="author">Author</label>
    {{input class="form-control" value=author id="author" placeholder="Bonafide-o Dog" required=true}}
  </div>
  <div class="form-group">
    <label for="answer">Answer</label>
    {{textarea class="form-control" value=answer id="answer" placeholder="Woof, woof woof BARK bork growl." required=true}}
  </div>
  {{#bs-button  type="primary" onClick=(action 'saveAnswer' answer)}}Post Answer{{/bs-button}}
</form>
